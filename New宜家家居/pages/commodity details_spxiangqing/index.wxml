    <view class="detail_show">
    <!--详情-->
      <view id="detail" style="{{tabCurrent == 0?'display:block':'display:none'}}">
      <block wx:for="{{itemSize}}">
        <image src="{{item.imgge}}"></image>
      </block>
      </view>
      <!--评论-->
      <view id="comment" style="{{tabCurrent == 1?'display:block':'display:none'}}">
