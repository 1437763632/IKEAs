        </view>		
        
      </view>
    </view>

    </view>
  </view>

</view>
<!--下列导航-->
<view id="buy">
	<view class="buy_click">
		<view class="consult">
			<image src="/images/kefu1.png"></image>
			<view class="text1">客服</view>
		</view>
		<view class="consult collect">
			<image src="/images/collect.png"></image>
			<view class="text1">收藏</view>
		</view>
    
		<view class="go_buy flexRowBetween" >
			<view bindtap="444" class="shoppingCart"  data-Id="{{data.Id}}" data-ProductName="{{data.ProductName}}" data-ProductImage="{{data.ProductImage}}" data-Texture="{{data.Texture}}" data-image="{{data.Price}}">
				加入购物车
			</view>      
			<view class="go_pay" bindtap='order'>
				立即购买

			</view>
		</view>
	</view>
</view>

</form>


