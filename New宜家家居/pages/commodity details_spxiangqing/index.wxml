<form bindsubmit='AddCarts'>
<!-- 轮播图开始位置 -->
<swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
  <block wx:for="{{itemSize}}">
    <swiper-item>
      <image src="{{item.imgge}}"></image>
    </swiper-item>
  </block>
</swiper>

<!-- 轮播图结束位置 -->



